{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Beküldött receptek</h1>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Étel neve</th>
            <th>Státusz</th>
            <th>Kategória</th>
            <th>Recept</th>
            <th>Szerkesztés</th>
        </tr>  
    </thead>
    <tbody>
        {{#each receptek}}
        <tr>
            <td>{{knev}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{kategoria}}</td>
            <td style="max-width:500px;"><textarea style="width:100%;height:100px;" disabled>{{description}}</textarea></td>
            <td>
                {{#if change}}
                <a href="szerkeszt/{{id}}" class="btn btn-warning" role="button">Szerkesztés</a>
                {{else}}
                -
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/receptek/new" class="btn btn-default">Új recept beküldése</a></p>